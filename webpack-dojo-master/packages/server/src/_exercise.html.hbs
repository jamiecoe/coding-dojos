<div class="container-fluid">
<div class="row mt-4">
  <div class="col-md-7 border-right mb-4">
    <style>
      article h1, article h2, article h3 {
        margin: 2rem 0 1rem;
      }
      article h1 {
        margin-top: 0;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid #ddd;
      }
      article p {
        font-size: 1.2rem;
        line-height: 1.5em;
      }
    </style>
    <article class="ml-4 mr-4">
      <h1>{{exercise.title}}</h1>
      <div id="totalFailure"></div>
      {{{content}}}
      <div id="testProgress"></div>
    </article>
  </div>
  <div class="col-md-5">
    <div class="card">
      <div class="card-header">
        Webpack Output
        <a
          class="ml-1"
          data-container="body"
          data-toggle="popover"
          data-content="This is the output of your current webpack.config.js for this exercise."
          href="#"
        >
          (?)
        </a>
      </div>
      <div class="card-body">
        <div id="stats"></div>
      </div>
    </div>
  </div>
</div>
</div>
<script src="/assets/js/socket.io"></script>
<script src="/assets/js/highlight"></script>
<script src="/assets/js/exercise"></script>
<script>
  initExercise({
    exerciseId: '{{exercise.id}}',
    socketIO: io,
    $: jQuery,
    hljs: hljs
  })
</script>
